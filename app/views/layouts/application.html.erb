<!DOCTYPE html>
<html>
<head>
  <title>Wedoo</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <% unless flash.empty? %>
    <div class="alerts">
      <% flash.each do |name, msg| %>
        <div class="<%= name %>"><%= msg %></div>
      <% end %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
