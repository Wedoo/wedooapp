<%= simple_form_for([ong,@paypal_app]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :active, as: :boolean%>
    <%= f.input :mode, priority: [ "sandbox" ], collection: [ ["sandbox", 0],["live",1 ]]%>
    <h2>REST API</h2>
    <%= f.input :client_id , label: 'Client id'%>
    <%= f.input :client_secret, label: 'Client secret' %>
    <h2>Classic API</h2>   
    <%= f.input :app_id , label: 'App id'%>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :signature %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
