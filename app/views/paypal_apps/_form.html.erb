<%= simple_form_for(@paypal_app, url: ong_paypal_apps_path(ong)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :active, as: :boolean%>
    <%= f.input :client_id %>
    <%= f.input :client_secret %>
    <%= f.input :username %>
    <%= f.input :app_id %>
    <%= f.input :password %>
    <%= f.input :signature %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
